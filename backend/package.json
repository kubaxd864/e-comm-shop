{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:unit": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/unit",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/integration --runInBand",
    "test:e2e": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e --runInBand --verbose",
    "test:bdd": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/bdd --testPathPattern=\\.feature\\.js$",
    "test:bdd:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/bdd --testPathPattern=\\.feature\\.js$ --watch",
    "test:performance": "artillery run __tests__/performance/scenarios/api-load-test.yml --output __tests__/performance/reports/report.json",
    "test:performance:ci": "artillery run __tests__/performance/scenarios/api-load-test.yml --output __tests__/performance/reports/report.json && artillery report __tests__/performance/reports/report.json --output __tests__/performance/reports/report.html",
    "test:performance:quick": "artillery quick --count 100 -n 50 http://localhost:3000/api/health",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:bdd",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:bdd && npm run test:e2e",
    "pretest": "echo 'Preparing test environment...'",
    "posttest": "echo 'Tests completed'"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.spec.js",
      "**/__tests__/**/*.feature.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/performance/"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "functions/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup/jest.setup.js"
    ],
    "testTimeout": 15000,
    "verbose": true,
    "coverageProvider": "v8"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mysql-session": "^3.0.3",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "express-socket.io-session": "^1.3.5",
    "fast-xml-parser": "^5.3.2",
    "helmet": "^8.1.0",
    "jest-cucumber": "^4.5.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.11",
    "nodemon": "^3.1.11",
    "qs": "^6.14.0",
    "socket.io": "^4.8.3",
    "stripe": "^20.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "artillery": "^2.0.28",
    "artillery-plugin-metrics-by-endpoint": "^1.22.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "supertest": "^7.2.2"
  }
}
